<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fs.tandat.soccernetwork.UpcomingMatchesFragment"
    android:background="@color/chromeish04">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPCOMING MATCHES"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/chromeish01"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/tblUpcomingMatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/chromeish02">
                        <TextView
                            android:text="Match ID"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_width="60dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="Field Name"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="Host Name"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:layout_width="80dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="Max Players"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:layout_width="60dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="Price"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:layout_width="80dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="Start Time"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:layout_width="80dp"
                            android:textSize="16dp"/>
                        <TextView
                            android:text="End Time"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:layout_width="80dp"
                            android:textSize="16dp"/>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
